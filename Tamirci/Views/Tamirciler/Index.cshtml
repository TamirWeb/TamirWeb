@using Tamirci.Models
@model List<Tamirciler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="breadcrumbs" data-aos="fade-in">
    <div class="container">
        <h2>Tüm Tamirciler</h2>
    </div>
</div><!-- End Breadcrumbs -->
<!-- ======= Events Section ======= -->
<section id="doctors" class="doctors">
