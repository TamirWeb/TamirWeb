        @foreach (var x in Model)
        {
            <div class="row">

                <div class="col-lg-10">
                    <div class="member d-flex align-items-start">
                        <div class="pic"><img src="~/Content/Style/İmages/tamir.jpg" class="img-fluid" alt=""></div>
                        <div class="member-info">
                            <a href="~/Tamirciler/TamirciDetail/@x.ID"><h4>@x.TamirciAdı</h4></a>
                            <span>@x.Tamirci_Telefon</span>
                            <p>@x.Tamirci_Tanım.Substring(0, 19)</p>
