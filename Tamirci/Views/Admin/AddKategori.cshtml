@model Tamirci.Models.Kategori
@{
    ViewBag.Title = "AddKategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h3 class="card-title">Yeni Kategori Ekle</h3>

            @using (Html.BeginForm("AddKategori", "Admin", FormMethod.Post))
            {
                <label for="Baslik">Kategori Adı</label> <br />
                @Html.TextBoxFor(x => x.kategori, new { @class = "form-control" })
                <br />
                <button class="btn btn-outline-primary"><i class="mdi mdi-content-save"></i>&nbsp;&nbsp;Ekle</button>
            }

        </div>
    </div>
</div>
