@using Tamirci.Models
@model List<Kategori>

@{
    ViewBag.Title = "Kategori";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div><a href="\Admin\AddKategori" class="btn btn-success btn-sm"><i class="mdi mdi-plus-circle-outline"></i>&nbsp;&nbsp;Yeni Kayıt Ekle</a></div>
<div class="col-lg-12 grid-margin stretch-card">
    <body onload="kapat()">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kategoriler Tablosu</h4>
                @if (@TempData["AlertMessage"] != null)
                {
                    <div id="dv1" class="alert alert-success">
                        <strong style="font-size:15px;">Başarı  !! @TempData["AlertMessage"]</strong>
                        @*<button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">x</span>
                            </button>*@
                    </div>
                }
                <div class="table-responsive">
                    <table id="tbl1" class="table table-hover">
                        <thead>
                            <tr>
                                <th>Kategori Adı</th>
                                <th>İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var x in Model)
                            {
                                <tr>
                                    <td>@x.kategori</td>
                                    <td>
                                        <a href="\Admin\GetKategori\@x.Id" class="btn btn-outline-warning btn-sm"><i class="mdi mdi-table-edit"></i>&nbsp;&nbsp;Güncelle </a>
                                        <a href="\Admin\RemoveKategori\@x.Id" onclick=" if (!UserDeleteConfirmation()) return false;" class="btn btn-outline-danger btn-sm"><i class="mdi mdi-close-circle-outline"></i>&nbsp;&nbsp;Sil</a>
                                    </td>

                                </tr>
                            }

                            @*<tr>
                                    <td>Messsy</td>
                                    <td>Flash</td>
                                    <td class="text-danger"> 21.06% <i class="ti-arrow-down"></i></td>
                                    <td><label class="badge badge-warning">In progress</label></td>
                                </tr>
